name: CI/CD Pipeline

on:
  push:
    branches: [ main ]

jobs:
  build-and-deploy:
    runs-on: self-hosted  # This uses your controlplane VM runner

    steps:
    - name: Checkout code
      uses: actions/checkout@v4  # Checks out your repository code

    - name: Build Docker Image
      run: docker build -t ${{ secrets.DOCKER_USERNAME }}/simple-app:${{ github.sha }} .

    - name: Login to Docker Hub
      uses: docker/login-action@v3
      with:
        username: ${{ secrets.DOCKER_USERNAME }}
        password: ${{ secrets.DOCKER_PASSWORD }}

    - name: Push Docker Image
      run: |
        docker tag ${{ secrets.DOCKER_USERNAME }}/simple-app:${{ github.sha }} ${{ secrets.DOCKER_USERNAME }}/simple-app:latest
        docker push ${{ secrets.DOCKER_USERNAME }}/simple-app:${{ github.sha }}
        docker push ${{ secrets.DOCKER_USERNAME }}/simple-app:latest

    - name: Deploy to Kubernetes
      run: |
        kubectl apply -f k8s/deployment.yaml
        kubectl apply -f k8s/service.yaml
        kubectl rollout status deployment/simple-app
